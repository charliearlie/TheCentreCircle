<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/home_team"
            android:layout_marginStart="41dp"
            android:layout_above="@+id/away_team"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/away_team"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/home_team"
            android:layout_marginBottom="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/home_score"
            android:layout_alignTop="@+id/home_team"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:textColor="#fb0303" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/away_score"
            android:layout_below="@+id/home_team"
            android:layout_alignEnd="@+id/home_score"
            android:textColor="#fb0303" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

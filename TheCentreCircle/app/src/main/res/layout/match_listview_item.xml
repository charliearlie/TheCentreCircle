<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="88"
        android:id="@+id/home_team_event_minute"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="M.Ã–zil"
        android:id="@+id/home_team_event_player"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/home_team_event_minute"
        android:layout_toEndOf="@+id/home_team_event_type"
        android:fontFamily="sans-serif-condensed" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/home_team_event_type"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/home_team_event_minute"
        android:layout_marginStart="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="88"
        android:id="@+id/away_team_event_minute"
        android:layout_alignBottom="@+id/home_team_event_player"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-condensed" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/away_team_event_type"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="11dp"
        android:layout_toStartOf="@+id/away_team_event_minute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="M. Ozil"
        android:id="@+id/away_team_event_player"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/away_team_event_type"
        android:layout_marginEnd="12dp"
        android:fontFamily="sans-serif-condensed"/>
</RelativeLayout>